<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sumit.medicinereminder">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blue">
        <activity
            android:name=".ViewController.AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName=".ViewController.MainActivity" >
            <!--adb -d shell "run-as teamqitalach.pillapp cat /data/data/teamqitalach.pillapp/databases/filename.sqlite > /sdcard/filename.sqlite"-->
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewController.MainActivity" />
        </activity>
        <activity
            android:name=".ViewController.AlertActivity"
            android:label="@string/title_activity_alert"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="com.sumit.medicinereminder.alertactivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewController.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewController.PillBoxActivity"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name=".ViewController.ScheduleActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName=".ViewController.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewController.MainActivity" />
        </activity>
        <activity
            android:name=".ViewController.EditActivity"
            android:label="@string/title_activity_edit" >
        </activity>
    </application>

</manifest>